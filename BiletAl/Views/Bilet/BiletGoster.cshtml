@using BiletAl.Models.Entity
@model List<TBLBilet>
@*@model BiletAl.Models.Entity.TBLBilet
    @using BiletAl.Models.Entity*@
@{
    ViewBag.Title = "BiletGoster";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>BiletGoster</h2>

@using (Html.BeginForm("BiletGoster", "Bilet", FormMethod.Get))
{
    <div style="margin-top:15px; margin-bottom:15px;">
        <b>Otobüsler: </b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}


<table class="table table-bordered">
    <tr>
        <th>SeferID</th>
        <th>YolcuID</th>
        <th>Satış Fiyatı</th>
        <th>Koltuk Numarası</th>
        <th>Otobüs ID</th>
        <th>Sil</th>
       
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <form action="/Bilet/BiletSil" method="post">

                @Html.Hidden("biletID", k.BiletID)
                <td>@k.BiletID</td>
                <td>@k.YolcuID</td>
                <td>@k.SatisFiyati</td>
                <td>@k.KoltukNo</td>
                <td>@k.OtobusID</td>

                <td>
                    <p style="margin-top:10px;">
                        <input type="submit" value="Sil" class="btn btn-success" />
                    </p>
                </td>
            </form>
        </tr>
    }

</table>